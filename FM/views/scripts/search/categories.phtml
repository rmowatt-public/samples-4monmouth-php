<div id="categories">
	<h5><span class="lwr">by</span> categories</h5>
	<div id="searchCats">
	<span><input type="checkbox" name="chkbx_category_0" id="chkbx_category_0"  class="catcbx_all" " checked/>ALL</span>
	<?php	foreach($this->cats as $index=>$category) {
			$main = $category['main'];
			if(!is_object($main)){continue;}
			$subs = (array_key_exists('subs', $category))  ? $category['subs'] : false;
			$catName = str_ireplace(' ', '&nbsp;', $main->getName());?>
			<span>
				<input type="checkbox" class="catcbx" name="chkbx_category_<?php echo $main->getId(); ?>" id="category_<?php echo $main->getId(); ?>" />
