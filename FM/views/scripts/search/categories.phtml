				<?php if($subs) { ?>
					<ul class="subcats" id="subcategory_<?php echo $main->getId(); ?>">
					<input  type="checkbox" style="display:none" name="chkbx_all_<?php echo $main->getId(); ?>" id="chkbx_all_<?php echo $main->getId(); ?>" />
						<?php foreach ($subs as $key=>$sub) { 
								$subName = ucwords(strtolower(str_ireplace(' ', '&nbsp;', $sub->getName()))); ?>
								<li>
									<input type="checkbox" class="subcbx" name="chkbx_subcat_<?php echo $sub->getId(); ?>_<?php echo $main->getId(); ?>" id="chkbx_category_<?php echo $sub->getId(); ?>" onclick="FM.Search.toggleSubcatAll(this, <?php echo $main->getId(); ?>)" />
									<label><?php echo $subName; ?></label>
								</li>
						<?php }  ?>
					</ul>
				<?php } ?>
			</span>
		<?php }?>
		
	</div>
</div>


